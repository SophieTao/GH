
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/layout"

    android:background="@drawable/background"
    >

    <ImageView
        android:layout_width="140dp"
        android:layout_height="25dp"
        android:id ="@+id/star"
        android:src="@drawable/star"
        android:layout_alignBottom="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/friend"
        android:layout_alignEnd="@+id/friend" />

    <ImageView
        android:layout_width="140dp"
        android:layout_height="160dp"
        android:id ="@+id/self"
        android:src="@drawable/self"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id ="@+id/friend"
        android:src="@drawable/friend"
        android:layout_below="@+id/bomb"
        android:layout_alignLeft="@+id/self"
        android:layout_alignStart="@+id/self"
        android:layout_marginTop="41dp"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id ="@+id/coinbag"
        android:src="@drawable/coinbag"
        android:layout_alignTop="@+id/self" />
    <ImageView
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:id ="@+id/friend1"
        android:src="@drawable/duck"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:id ="@+id/heart"
        android:src="@drawable/star"
        android:layout_below="@+id/bomb"
        android:layout_toLeftOf="@+id/friend2"
        android:layout_toStartOf="@+id/friend2" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id ="@+id/playMusic"
        android:src="@drawable/play"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id ="@+id/muteMusic"
        android:src="@drawable/mute"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/bomb1"
        android:layout_alignEnd="@+id/bomb1" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:id ="@+id/friend2"
        android:src="@drawable/friend2"
        android:layout_below="@+id/friend"
        android:layout_toLeftOf="@+id/friend1"
        android:layout_toStartOf="@+id/friend1" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id ="@+id/bomb1"
        android:src="@drawable/bomb"
        android:layout_alignTop="@+id/self"
        android:layout_toLeftOf="@+id/bomb"
        android:layout_toStartOf="@+id/bomb" />


    <ImageView
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:id ="@+id/count"
        android:src="@drawable/coin"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/heart1"
        android:layout_alignEnd="@+id/heart1" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:id ="@+id/bomb"
        android:src="@drawable/bomb"
        android:layout_below="@+id/heart1"
        android:layout_alignLeft="@+id/heart1"
        android:layout_alignStart="@+id/heart1"
        android:layout_marginTop="30dp" />
    <ImageView
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:adjustViewBounds="true"
        android:id ="@+id/heart1"
        android:src="@drawable/heart"
        android:layout_marginTop="15dp"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:layout_below="@+id/editText"
        android:layout_toLeftOf="@+id/healthText"
        android:layout_toStartOf="@+id/healthText" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:text="0"
        android:layout_alignBottom="@+id/count"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/healthText"
        android:layout_alignBottom="@+id/heart1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/bomb"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scorenum"
        android:text="0"
        android:layout_above="@+id/heart1"
        android:layout_alignTop="@+id/editText"
        android:layout_toRightOf="@+id/star" />


</RelativeLayout>